<div>
    <h2 class="fw-bold mb-2 text-uppercase">Cálculo de números aleatorios</h2>
    
    <form method="post" action="/api/randoms" class="m-3">
        <div class="form-group">
            <input type="number" id="inputRandom" max="500000000" class="form-control"/>
        </div>
        <button class="btn btn-primary m-1" type="submit">Generar</button>
    </form>

    <div>
        <div class="container-fluid">
            <table class="table filaDeTabla">
                <thead class="encabezadoDeTabla">
                    <tr class="text-center">
                        <th>Número</th>
                        <th>Cantidad de veces que se repitió</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each data}}
                    <tr class="text-center">
                        <th>{{this.numero}}</th>
                        <th>{{this.valor}}</th>
                    </tr>
                    {{/each}}
                </tbody>  
            </table>
        </div>
    </div>
</div>